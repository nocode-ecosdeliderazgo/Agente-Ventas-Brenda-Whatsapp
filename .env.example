# === BRENDA WHATSAPP BOT - VARIABLES DE ENTORNO ===
# Copia este archivo como .env y configura tus credenciales

# === TWILIO CREDENTIALS ===
# Obtén estas credenciales desde: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+14155238886

# === OPENAI CREDENTIALS ===
# Obtén tu API key desde: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# === DATABASE CONFIGURATION ===
# Configuración de PostgreSQL (opcional)
DATABASE_URL=postgresql://username:password@host:port/database

# === APP CONFIGURATION ===
# Configuración de la aplicación
APP_ENVIRONMENT=development
LOG_LEVEL=INFO
WEBHOOK_VERIFY_SIGNATURE=true

# === HEROKU CONFIGURATION ===
# Configuración para despliegue en Heroku (opcional)
HEROKU_APP_NAME=your-app-name

# === NGROK CONFIGURATION ===
# Configuración para desarrollo local (opcional)
NGROK_AUTH_TOKEN=your-ngrok-auth-token

# === MONITORING ===
# Configuración de monitoreo (opcional)
SENTRY_DSN=your-sentry-dsn
LOGGLY_TOKEN=your-loggly-token

# === FEATURES ===
# Habilitar/deshabilitar funcionalidades
ENABLE_AI_RESPONSES=true
ENABLE_MULTIMEDIA=true
ENABLE_ADVISOR_REFERRALS=true
ENABLE_COURSE_ANNOUNCEMENTS=true

# === SECURITY ===
# Configuración de seguridad
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# === PERFORMANCE ===
# Configuración de rendimiento
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
CACHE_TTL=3600

# === TESTING ===
# Configuración para testing
TEST_MODE=false
MOCK_AI_RESPONSES=false
MOCK_TWILIO_SEND=false 